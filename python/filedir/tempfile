# generate a temporary file with a visible name in the file system

    >>> import tempfile
    >>> temp = tempfile.NamedTemporaryFile()
    >>> temp.write('some data in here')
    >>> filename = temp.name
    >>> temp.close()

    # a useful context manager 
    >>> import tempfile
    >>> from contextlib import contextmanager
    >>> @contextmanager 
    >>> def tempinput(data):
    >>>     temp = tempfile.NamedTemporaryFile()
    >>>     temp.write(data)
    >>>     yield temp.name
    >>>     temp.close()

    >>> with tempinput('testing data') as tempfilename:
    >>>     workwithfilename(tempfilename)


